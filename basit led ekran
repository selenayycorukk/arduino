#include <LiquidCrystal.h>


// LCD ekran pini tanımları
const int rs = 12;
const int en = 11;
const int d4 = 5;
const int d5 = 4;
const int d6 = 3;
const int d7 = 2;

// LCD ekranın boyutları (16x2)
const int lcdColumns = 16;
const int lcdRows = 2;

LiquidCrystal lcd(rs, en, d4, d5, d6, d7);

void setup() {
  lcd.begin(lcdColumns, lcdRows);
  lcd.print("Hello, World!");
}

void loop() {
  // İsterseniz burada sürekli bir şeyler yapabilirsiniz,
  // ancak yazı sadece bir kez başlangıçta gösterilecektir.
}
